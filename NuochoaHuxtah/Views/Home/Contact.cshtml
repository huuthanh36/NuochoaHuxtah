<script>
	function initMap() {
		
		var location = { lat: 16.08981486000708, lng: 108.1205017 }; // Tọa độ của vị trí (Chicago, IL)
		var map = new google.maps.Map(document.getElementById('gmap'), {
			zoom: 14,
			center: location
		});
		var marker = new google.maps.Marker({
			position: location,
			map: map
		});
	}
	window.onload = initMap;
</script>