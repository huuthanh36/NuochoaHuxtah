@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brand Listed";
}
<h4>Danh sách thương hiệu</h4>
<style>
    td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }
</style>
<a asp-action="Create" class="btn btn-default btn-sm" asp-controller="Brand">Thêm thương hiệu</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên thương hiệu</th>
            <th scope="col">Mô tả thương hiệu</th>
            <th scope="col">Slug</th>
            <th scope="col">Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="td">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-success">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Brand" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Brand" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }


    </tbody>
</table>