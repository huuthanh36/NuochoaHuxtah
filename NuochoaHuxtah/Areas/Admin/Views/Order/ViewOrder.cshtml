@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
    decimal total = 0;
    decimal subtotal = 0;
}
<h4>Danh sách đơn hàng</h4>
<style>
    td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }
</style>

<table class="table" id="example">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên khách hàng</th>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Giá</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            subtotal = item.Quantity * item.Price;
            total += subtotal;
            <tr class="td">
                <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.OrderCode</td>
                <td>@item.Product.Name</td>
                <td><img src="~/media/products/@item.Product.Image" width="50" height="50" /></td>
                <td>$@item.Price.ToString("#,##0 VND")</td>
                <td>@item.Quantity</td>
                <td>@subtotal.ToString("C")</td>
               @*  <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-success">Đơn hàng thành công</span>
                    }
                </td> *@
                
            </tr>
        }
        <tr>
            <td>Total:</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>@total.ToString("C")</td>
            <td>
                <select class="form-control select-update-order">
                <option value="1">Đơn hàng mới</option>
                <option value="0">Đã xử lý</option>

            </select></td>
        </tr>

    </tbody>
</table>
@section Scripts{
    <script>
        new DataTable('#example', {
            layout: {
                topStart: {
                    buttons: ['pdf','print']
                }
            }
        });

    </script>
    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();
                var ordercode = $('.getId').val();
                // alert(status);
                // alert(ordercode);
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode },
                    success: function (result) {
                        if (result.success) {
                            // console.log("Cập nhật thành công");
                            Swal.fire("Cập nhật thành công");
                        } else {
                            Swal.fire("Cập nhật thất bại: " + result.message);
                        }
                    },
                });
            });
        });
        
    </script>
}